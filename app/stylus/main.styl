// main stylus file

backcolor = #4cd964
forecolor = #eee

.tabbar
  i.icon
    font-size: 30px

.navbar
  i.icon
    font-size: 28px

.panel-left
  background: backcolor

  .circular
    border: 4px solid #fff
    border-radius: 50%
    height: 120px
    width: 120px
    margin: 0 auto
    overflow: hidden

  .username
    text-align: center
    font-size: 20px
    margin-top: 5px
    color: forecolor
    text-shadow: 0 0 2px rgba(0,0,0,0.5)

  ul
    border: none

  i
    font-size: 24px
    margin: 0 auto

.views
  box-shadow: 0 0 15px rgba(0,0,0,0.3)
